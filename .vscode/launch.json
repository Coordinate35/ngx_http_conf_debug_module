    "version": "0.2.0",
    "configurations": [
        { 
            "name": "debug nginx worker",
            "type": "cppdbg",
            "request": "attach",
            "program": "/home/weijunjie/nginx/sbin/nginx",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "debug nginx master",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/weijunjie/nginx/sbin/nginx",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    // "text": "-enable-pretty-printing -gdb-set follow-fork-mode child",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}